{
    "name": "@donecollectively/stellar-contracts",
    "version": "0.9.0alpha3",
    "description": "Smart contract fusion for Cardano",
    "license": "SEE LICENSE IN LICENSE.TXT",
    "main": "./dist/stellar-contracts.mjs",
    "types": "./dist/stellar-contracts.d.ts",
    "exports": {
        ".": {
            "types": "./dist/stellar-contracts.d.ts",
            "import": "./dist/stellar-contracts.mjs",
            "XXXrequire": "./dist/stellar-contracts.cjs",
            "default": "./dist/stellar-contracts.mjs",
            "dev": {
                "types": "./src/index.ts",
                "import": "./src/index.js"
            }
        },
        "./XXXXtesting": {
            "types": "./dist/testing.d.ts",
            "import": "./dist/testing.mjs",
            "XXXrequire": "./dist/testing.cjs",
            "default": "./dist/testing.mjs"
        }
    },
    "type": "module",
    "pnpm": {
        "overrides": {
            "@helios-lang/Xcompiler": "../helios/compiler",
        }
    },
    "scripts": {
        "build": "scripts/build",
        "build:watch": "scripts/build --watch",
        "dev": "scripts/build --watch",
        "smoke:test": "SMOKE=1 vitest run 02 04",
        "smoke:testing": "SMOKE=1 vitest --inspect --poolOptions.forks.singleFork watch 02 04",
        "test": "vitest run ",
        "testing": "vitest watch",
        "testing:debug": "vitest --inspect --poolOptions.forks.singleFork watch",
        "test:ui": "vitest --ui",
        "test:run": "vitest run"
    },
    "author": "Done Collectively LCA",
    "dependencies": {
        "@types/proper-lockfile": "^4.1.4",
        "proper-lockfile": "^4.1.2",
        "semver": ">=7.5.2"
    },
    "devDependencies": {
        "@helios-lang/codec-utils": "link:../helios/codec-utils",
        "@helios-lang/compiler": "link:../helios/compiler",
        "@helios-lang/compiler-utils": "link:../helios/compiler-utils",
        "@helios-lang/contract-utils": "link:../helios/contract-utils",
        "@helios-lang/crypto": "link:../helios/crypto",
        "@helios-lang/ledger": "link:../helios/ledger",
        "@helios-lang/tx-utils": "link:../helios/tx-utils",
        "@helios-lang/type-utils": "link:../helios/type-utils",
        "@helios-lang/uplc": "link:../helios/uplc",
        "@microsoft/api-extractor": "^7.47.11",
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/pluginutils": "^5.0.2",
        "@types/node": "^20.2.5",
        "esbuild": "^0.19.4",
        "rollup": "^3.23.1",
        "rollup-plugin-api-extractor": "^0.2.5",
        "rollup-plugin-esbuild": "^6.1.0",
        "rollup-plugin-node-externals": "^6.1.1",
        "rollup-plugin-shell": "^1.0.9",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-string": "^3.0.0",
        "rollup-plugin-ts": "^3.2.0",
        "rollup-pluginutils": "^2.8.2",
        "semver": ">=7.5.2",
        "tslib": "^2.5.3",
        "typescript": "5.6.2",
        "vite": "^4.4.11",
        "vitest": "^2.1.1"
    }
}
