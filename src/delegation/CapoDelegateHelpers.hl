    IsDelegation {
        dd: DelegationDetail
    }
}

func mustReturnValueToScript(value : Value, ctx : ScriptContext) -> Bool {
    if (!returnsValueToScript( value, ctx)) {
        error("authZor not returned")
        // error("the authZor token MUST be returned")
    };
    true
}

